<layer-list xmlns:android="http://schemas.android.com/apk/res/android" >

    <!-- Define the background properties like color etc -->
    <item android:id="@android:id/background">
        <shape>
            <gradient
                android:angle="270"
                android:centerColor="#9B9B9B"
                android:centerY="1.0"
                android:endColor="#9B9B9B"
                android:startColor="#9B9B9B" />
        </shape>
    </item>

    <!-- Define the progress properties like start color, end color etc -->
    <item android:id="@android:id/progress">
        <clip>
            <shape>
                <gradient
                    android:angle="270"
                    android:centerColor="#2C5878"
                    android:centerY="1.0"
                    android:endColor="#2C5878"
                    android:startColor="#2C5878" />
            </shape>
        </clip>
    </item>

</layer-list>