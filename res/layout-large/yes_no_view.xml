<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#F2f1f2f2"
    android:orientation="vertical" >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="1" >
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:gravity="center_horizontal"
        android:orientation="horizontal" >

        <TextView
            android:id="@+id/errorTextViewYesNoView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:maxLines="4"
            android:paddingLeft="5dp"
            android:paddingRight="0.01dp"
            android:scrollbarStyle="outsideInset"
            android:scrollbarThumbVertical="@drawable/custom_dialog_scroller_thumb"
            android:scrollbarTrackVertical="@drawable/custom_dialog_scroller_track"
            android:scrollbars="vertical"
            android:fadeScrollbars="false"
            android:text="This is an example of the error"
            android:textColor="@color/textColor"
            android:textSize="30sp" />
    </LinearLayout>
    
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_horizontal"
        android:layout_marginTop="30dp"
        android:orientation="horizontal" >

        <Button
            android:id="@+id/yesButtonYesNoView"
            android:layout_width="@dimen/round_button_width"
            android:layout_height="@dimen/round_button_height"
            android:layout_gravity="center_horizontal"
            android:background="@drawable/round_button_color_selector"
            android:text="@string/yes_text"
            android:textColor="@color/White"
            android:textSize="@dimen/button_text_size" />

        <Button
            android:id="@+id/noButtonYesNoView"
            android:layout_width="@dimen/round_button_width"
            android:layout_marginLeft="30dp"
            android:layout_height="@dimen/round_button_height"
            android:layout_gravity="center_horizontal"
            android:background="@drawable/round_button_color_selector"
            android:text="@string/no_text"
            android:textColor="@color/White"
            android:textSize="@dimen/button_text_size" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="1" >
    </LinearLayout>

</LinearLayout>