<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="horizontal" >

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:layout_weight="1"
        android:gravity="center"
        android:orientation="vertical"
        android:weightSum="10" >

        <ImageView
            android:id="@+id/imageViewRestaurant1"
            android:layout_width="@dimen/restaurant_Logo_size"
            android:layout_height="@dimen/restaurant_Logo_size"
            android:src="@drawable/abc_ab_bottom_solid_dark_holo" />

        <TextView
            android:id="@+id/textViewRestaurant1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:text="NAZIV RESTORANA 1"
            android:textSize="@dimen/calories_font_size" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:layout_weight="1"
        android:gravity="center"
        android:orientation="vertical" >

        <ImageView
            android:id="@+id/imageViewRestaurant2"
            android:layout_width="@dimen/restaurant_Logo_size"
            android:layout_height="@dimen/restaurant_Logo_size"
            android:src="@drawable/abc_ab_bottom_solid_light_holo" />

        <TextView
            android:id="@+id/textViewRestaurant2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:text="NAZIV RESTORANA 2"
            android:textSize="@dimen/calories_font_size" />
    </LinearLayout>

</LinearLayout>